{{#each paginatedTherapists as |therapist|}}
  {{#tinder-card cardDidDisappear=(action "removeCard")}}
    <style media="screen">
      #tinder-card-image {
        width: 100%;
        height: calc(100% - 88px);
        margin-bottom: 88px;

        background: url({{therapist}}) no-repeat center center fixed;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
      }
    </style>

    <div id="tinder-card-image"></div>

    <div class="tinder-card-info absolute bottom-0 right-0 left-0 bt b--white bg-near-black flex">
      <div class="left-half w-50 flex flex-column justify-around ma2 white ttu">
        <span class="f4">Johnny</span>
        <span class="f1 fw6 mt1">Domino</span>
        <span class="f5 fw5 mt2 moon-gray">Software Engineer</span>
      </div>
      <div class="right-half w-50 flex justify-center">
        <div class="tinder-card-badge br-100"></div>
      </div>
    </div>
  {{/tinder-card}}
{{else}}
