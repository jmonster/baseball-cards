{{#each paginatedDeals as |deal|}}
  {{#tinder-card
    cardDidDisappear=(action "removeCard")
    onLeftTap=(action "onLeftTap")
    onRightTap=(action "onRightTap")
    class="ma5"
  }}

    {{#if showCamelGraph}}
      {{camel-graph-img product=deal.product}}
    {{else if showAdditionalActions}}
      <h1 class="ml1">Additional Resources</h1>
      <ul class="z-1">
        <li>{{fake-spot-link product=deal.product}}</li>
        <li>{{camel-link product=deal.product}}</li>
      </ul>
    {{else}}
      {{tinder-card-image imageUrl=deal.product.primaryImage}}

      <div class="tinder-card-info flex-none ph2 pb2">
        <div class="flex flex-column ttu">
          <div class="flex items-end mb2">
            <span class="f1 fw6 mt1 near-black highlight-green ph1">
              ${{deal.price}}
            </span>
            <span class="f1 mt2 mh1 purple strikethrough">
              <span class="light-gray">${{deal.product.msrp}}</span>
            </span>
            <span class="f5 fw6 mt1 mh1 white highlight-purple pa1 br1 tc flex-none">
              {{deal.savings}}% savings
            </span>
          </div>

          <span class="f5 fw5 near-black">
            {{deal.product.title}}
          </span>
        </div>
      </div>
    {{/if}}
  {{/tinder-card}}
{{else}}
  <div class="flex-auto f3 mv3 flex flex-column items-center">
    <span class="db f2 b mb1 mt3">ðŸ¥³ you got'em all</span>
    <span>check back soon for more deals</span>

    <div class="flex-auto bb b--gray w-100 mv3"></div>

    <span class="db light-purple">looking for something else to do?</span>
    <span class="db pv2 f2">{{link-to "review your likes" "app.deals"}}</span>
  </div>
{{/each}}
