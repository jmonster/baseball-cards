<div class="pt2 pb2">
  <h2 class="mh2 fw5 mb3">
    👍 <span class="bb b--gray pr3 pl1">Recent Likes</span>
  </h2>

  {{#if likedDeals}}
    <div class="liked-deal-list">
      {{#each likedDeals as |deal|}}
        {{#swipable-list-item as |sli|}}
          {{#sli.top}}
            {{deal-list-item deal=deal}}
          {{/sli.top}}

          {{#sli.actions}}
          <div class="">
            <button class="ma0 pv2 ph4 white br1" {{action "unlike-deal" deal.id}}>move to <b>disliked</b> list</button>
          </div>
          {{/sli.actions}}
        {{/swipable-list-item}}
      {{/each}}
    </div>
  {{else}}
    <div class="hk-well mh2 mv3">
      <span class="f2 mb2 lh-title">🧐</span>
      <span class="f3 mw7 center lh-copy">No recent likes.</span>
      <span class="db mt2">{{link-to 'tap to browse deals' 'app.swiper'}}</span>
    </div>
  {{/if}}
</div>


<div class="pt2 pb2">
  <h2 class="mh2 fw5 mb3">
    👎 <span class="bb b--gray pr3 pl1">Recent Dislikes</span>
  </h2>

  {{#if dislikedDeals}}
    <div class="liked-deal-list">
      {{#each dislikedDeals as |deal|}}
        {{#swipable-list-item as |sli|}}
          {{#sli.top}}
            {{deal-list-item deal=deal}}
          {{/sli.top}}

          {{#sli.actions}}
            <button class="ma0 pv2 ph4 white br1" {{action "relike-deal" deal.id}}>move to <b>liked</b> list</button>
          {{/sli.actions}}
        {{/swipable-list-item}}
      {{/each}}
    </div>
  {{else}}
    <div class="hk-well mh2 mv3">
      <span class="f2 mb2 lh-title">🥴</span>
      <span class="f3 mw7 center lh-copy">No recent dislikes.</span>
    </div>
  {{/if}}
</div>

{{#if staleDeals}}
  <div class="pt2 pb2">
    <h2 class="mh2 fw5 mb3">
      ⌛️ <span class="bb b--gray pr3 pl1">Expired</span>
    </h2>
    <div class="liked-deal-list">
      {{#each staleDeals as |deal|}}
        {{deal-list-item deal=deal}}
      {{/each}}
    </div>
  </div>
{{/if}}
