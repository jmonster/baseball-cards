{{#each paginatedDeals as |deal|}}
  {{#tinder-card
    cardDidDisappear=(action "removeCard")
    onLeftTap=(action "onLeftTap")
    onRightTap=(action "onRightTap")
  }}
    <style
      media="screen"
    >
      #tinder-card-image {
        background: url({{deal.primaryPhoto.path}}) 50% 50% no-repeat;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
      }
    </style>


    {{#if showCardDetails}}
      <div
        class="tinder-card-details near-black w-100 h-100 pa2 bg-light-yellow ba b--yellow"
      >
        <h2>about me</h2>
      </div>
    {{else}}
      <div
        id="tinder-card-image"
      >
      </div>

      <div
        class="tinder-card-info absolute bottom-0 right-0 left-0 bt b--white bg-near-black flex"
      >
        <div
          class="left-half w-50 flex flex-column justify-around ma2 ttu"
        >
          <span
            class="f4"
          >
          </span>
          <span
            class="f1 fw6 mt1"
          >
          </span>
          <span
            class="f5 fw5 mt2 moon-gray"
          >
            {{deal.title}}
          </span>
        </div>
        <div
          class="right-half w-50 flex justify-center"
        >
          <div
            class="tinder-card-badge br-100"
          >
          </div>
        </div>
      </div>
    {{/if}}
  {{/tinder-card}}
{{else}}
  <h2
    class="tc"
  >
    üôè goodluck
  </h2>
  <h3
    role="button"
    class="tc mt4 pa2 dark-gray"
    onclick={{action "reset"}}
  >
    tap to refresh
  </h3>
{{/each}}
